@model IEnumerable<RealEstateWebsite.Models.Property>
@* @model RealEstateWebsite.Models.Property *@
@{
    ViewData["Title"] = "Danh sách bất động sản";
}
<h2 class="mt-4 mb-3">Danh sách bất động sản</h2>
<a class="btn btn-primary mb-3" asp-action="Create">+ Đăng tin mới</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Giá</th>
            <th>Địa chỉ</th>
            <th>Ngày đăng</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">Không có bất động sản nào.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Price.ToString("N0") VND</td>
                    <td>@item.Address</td>
                    <td>@item.PostedDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Xem</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="5" class="text-center">Có @Model.Count() bất động sản.</td>
            </tr>
        }


    </tbody>
</table>
