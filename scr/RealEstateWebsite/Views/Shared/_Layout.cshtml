<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEstateWebsite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Header Section -->
    <header>
        <div class="container">
            <div class="logo">
                <a class="navbar-brand" href="/">RealEstateWebsite</a>
            </div>
            <nav class="navbar navbar-expand-lg navbar-light px-4">
                <ul class="menu">
                    <li><a href="#">Properties</a></li>
                    <li><a href="#">Agents</a></li>
                    <li><a href="/Blog">Blog</a></li>
                    <li><a href="/Contact">Contact</a></li>
                </ul>
            </nav>
            <div class="header-buttons">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown navbar-nav ms-auto list-unstyled">
                        <a class="nav-link dropdown-toggle text-info" href="#" id="userDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Hello @User.Identity?.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" asp-controller="Properties" asp-action="Create">New Post</a></li>
                            <li><a class="dropdown-item" asp-controller="Properties" asp-action="Index">My Posts</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Manage">Manage Account</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">Change
                                    Password</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings">Settings</a></li>
                            <li>
                                <hr class="dropdown-divider" />
                            </li>
                            <li>
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post"
                                    class="dropdown-item">
                                    <button type="submit" class="btn btn-link p-0 m-0 text-danger">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                }

            </div>
            <div class="mobile-menu-btn">
                <i class="fas fa-bars"></i>
            </div>
        </div>
    </header>
    <main role="main" class="flex-grow-1 container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top text-center footer bg-dark p-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>About Us</h5>
                    <p>We are a leading real estate platform connecting buyers and sellers.</p>
                </div>
                <div class="col-md-4">
                    <h5>Contact Us</h5>
                    <p>Email: support@RealEstateWebsite.com</p>
                    <p>Phone: +1 234 567 890</p>
                </div>
                <div class="col-md-4">
                    <h5>Follow Us</h5>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin"></i></a>
                </div>
            </div>
            <hr />
            <div class="text-center">
                <a href="#">Terms of Service</a> |
                <a href="#">Privacy Policy</a> |
                <a href="#">Contact Us</a>
            </div>
            <div class="text-center">
                &copy; 2025 - RealEstateWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <p>All rights reserved.</p>
            </div>
        </div>
    </footer>
    <a href="#" id="backToTop" title="Back to top">
        <i class="fa fa-arrow-up"></i>
    </a>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>
